<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_closest_mop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/polygon_toast_background"
    android:layout_margin="10dp"
    tools:context=".view.functionality.pulloff.MapsActivityPullOff">

    <TextView
        android:id="@+id/place_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="Nazwa:"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/place_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/place_name_text"
        android:layout_marginStart="10dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text=""
        android:textSize="20dp" />
    <TextView
        android:id="@+id/category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_name_value"
        android:textAlignment="textEnd"
        android:text="Kategoria:"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/category_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_name_value"
        android:layout_toEndOf="@+id/category_text"
        android:layout_marginStart="10dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text=""
        android:textSize="20dp" />
    <TextView
        android:id="@+id/tir_places_quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_value"
        android:textAlignment="textEnd"
        android:text="Miejsc ogÃ³lem:"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/tir_places_quantity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_value"
        android:layout_toEndOf="@+id/tir_places_quantity_text"
        android:layout_marginStart="10dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text=""
        android:textSize="20dp" />
    <TextView
        android:id="@+id/free_tir_places_quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tir_places_quantity_value"
        android:textAlignment="textEnd"
        android:text="Wolne miejsca:"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/free_tir_places_quantity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tir_places_quantity_value"
        android:layout_toEndOf="@+id/free_tir_places_quantity_text"
        android:layout_marginStart="10dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text=""
        android:textSize="20dp" />
    <TextView
        android:id="@+id/full_rest_distance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/free_tir_places_quantity_value"
        android:textAlignment="textEnd"
        android:text="Kilometry:"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/full_rest_distance_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/free_tir_places_quantity_value"
        android:layout_toEndOf="@+id/full_rest_distance_text"
        android:layout_marginStart="10dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text=""
        android:textSize="20dp" />
    <TextView
        android:id="@+id/full_rest_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_rest_distance_value"
        android:textAlignment="textEnd"
        android:text="Czas:"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/full_rest_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_rest_distance_value"
        android:layout_toEndOf="@+id/full_rest_time_text"
        android:layout_marginStart="10dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text=""
        android:textSize="20dp" />

</RelativeLayout>